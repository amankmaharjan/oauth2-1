<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="01" author="monster_bishal@live.com">
        <createTable tableName="oauth_client_details">
            <column name="client_id" type="varchar(255)">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>
            <column name="resource_ids" type="varchar(255)">
                <constraints nullable="false"></constraints>
            </column>
            <column name="client_secret" type="varchar(255)">
                <constraints nullable="false"></constraints>
            </column>
            <column name="scope" type="varchar(255)">
                <constraints nullable="false"></constraints>
            </column>
            <column name="authorized_grant_types" type="varchar(255)">
                <constraints nullable="false"></constraints>
            </column>
            <column name="web_server_redirect_uri" type="varchar(255)">
                <constraints nullable="false"></constraints>
            </column>
            <column name="authorities" type="varchar(255)">
                <constraints nullable="false"></constraints>
            </column>
            <column name="access_token_validity" type="integer">
                <constraints nullable="false"></constraints>
            </column>
            <column name="refresh_token_validity" type="integer">
                <constraints nullable="false"></constraints>
            </column>
            <column name="additional_information" type="varchar(4096)">
                <constraints nullable="false"></constraints>
            </column>
            <column name="autoapprove" type="tinyint">
            </column>
        </createTable>

        <createTable tableName="oauth_access_token">
            <column name="token_id" type="varchar(255)">
            </column>
            <column name="token" type="blob"></column>
            <column name="authentication_id" type="varchar(255)"></column>
            <column name="user_name" type="varchar(255)"></column>
            <column name="client_id" type="varchar(255)"></column>
            <column name="authentication" type="blob"></column>
            <column name="refresh_token" type="varchar(255)"></column>
        </createTable>

        <createTable tableName="oauth_refresh_token">
            <column name="token_id" type="varchar(255)"></column>
            <column name="token" type="blob"></column>
            <column name="authentication" type="blob"></column>
        </createTable>
    </changeSet>

</databaseChangeLog>
